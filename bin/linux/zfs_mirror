#!/bin/bash
####################################################################################################
# Description: Add drive as mirror
####################################################################################################

SCRIPT_DIR=$(realpath $(dirname "${BASH_SOURCE[0]}"))

VERBOSE_FLAG=""
printf_verbose() {
    if [[ -n "${VERBOSE_FLAG}" ]]; then
        printf "$1"
    fi
}

if [ "$EUID" -ne 0 ]; then
    echo "Please run as root or use sudo."
    exit 1
else
    printf_verbose "Running with root privileges.\n"
fi



