#!/bin/sh

# Build latest tmux from version control
sudo apt-get install git automake build-essential pkg-config libevent-dev libncurses-dev bison

mkdir -p "$HOME"/src
mkdir -p "$HOME"/src/git
pushd "$HOME"/src/git
git clone "https://github.com/tmux/tmux.git"
cd tmux
sh autogen.sh
./configure && make
sudo make install

popd
